@model IEnumerable<catalogoZOO.Model.Animal>

@{
    ViewData["Title"] = "Lista de Animais";
}
<style>
    body {
        font-family: sans-serif;
        background-color: #ffb48a; /* Cor de fundo mais clara */

        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
    }
    h1{
        background-color: #320000;
        text-align: center;
        color: antiquewhite;
    }
</style>
<h1>
    @ViewData["Title"]
</h1>

<body>
    <p>
        <a asp-action="Create">Adicionar um Animal</a>
    </p>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Especie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Habitat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Idade)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especie)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Habitat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Idade)
                    </td>

                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.AnimalId }) |@*
                        @Html.ActionLink("Detalhes", "Details", new { id = item.AlunoID }) |*@
                    @Html.ActionLink("Excluir", "Delete", new { id = item.AnimalId }) 
                </td>
                </tr>
            }
        </tbody>
    </table>
</body>

